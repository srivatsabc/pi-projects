{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "crmaznaiothubdev01": {
                "username": "${ACR_USER}",
                "password": "${ACR_PASSWORD}",
                "address": "${ACR_ADDRESS}"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.2",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.2",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "weatherSensor": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.weatherSensor}",
              "createOptions": {
                "HostConfig": {
                  "Devices": [
                    {
                      "PathOnHost": "/dev/i2c-1",
                      "PathInContainer": "/dev/i2c-1",
                      "CgroupPermissions": "rwm"
                    },
                    {
                      "PathOnHost": "/dev/i2c-20",
                      "PathInContainer": "/dev/i2c-20",
                      "CgroupPermissions": "rwm"
                    },
                    {
                      "PathOnHost": "/dev/i2c-21",
                      "PathInContainer": "/dev/i2c-21",
                      "CgroupPermissions": "rwm"
                    }
                  ]
                }
              }
            },
            "env": {
              "WAIT_TIME": {
                "value": 60
              }
            }
          },
          "deviceToCloudAgent": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.deviceToCloudAgent}",
              "createOptions": {}
            }
          },
          "cloudToDeviceAgent": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.cloudToDeviceAgent}",
              "createOptions": {}
            }
          },
          "rfidSensor": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.rfidSensor}",
              "createOptions": {
                "HostConfig": {
                  "Devices": [
                    {
                      "PathOnHost": "/dev/ttyS0",
                      "PathInContainer": "/dev/ttyS0",
                      "CgroupPermissions": "rwm"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "routes": {
          "weatherSensorTodeviceToCloudAgent": "FROM /messages/modules/weatherSensor/outputs/* INTO BrokeredEndpoint(\"/modules/deviceToCloudAgent/inputs/input1\")",
          "deviceToCloudAgentToIoTHub": "FROM /messages/modules/deviceToCloudAgent/outputs/* INTO $upstream",
          "rfidSensorTodeviceToCloudAgent": "FROM /messages/modules/rfidSensor/outputs/* INTO BrokeredEndpoint(\"/modules/deviceToCloudAgent/inputs/input1\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}